@page
@model FerroApp.GUI.Pages.AdminPages.ModifyManagerModel
@{
   Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}
    <link href="~/css/Multi.css" rel="stylesheet" />
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <h3>Modificar Gerente</h3>
                <div class="card" style="width: auto;">
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <form method="post">
                            <div class="row">
                                <div class="col">
                                    <label>Nombre:</label>
                                    <input type="text" class="form-control" placeholder="">
                                    <label>Apellidos</label>
                                    <input type="text" class="form-control" placeholder="">
                                    <label>Dirección</label>
                                    <input type="text" class="form-control" placeholder="">
                                    <label>Código</label>
                                    <input type="text" class="form-control" placeholder="5165165">
                                </div>
                            </div>
                            @*<button type="button" class="btn btn-success">Agregar Producto</button>*@
                            <div>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Eliminar">
                                    Eliminar Gerente
                                </button>
                                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
                                    Modificar Gerente
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Manager</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Usuario actualizado correctamente
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="Eliminar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Manager</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Usuario eliminado correctamente
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                </div>
            </div>
        </div>
    </div>